@{
    ViewBag.Title = "DMS | Home";
    ViewBag.breadcrumb = "<li><a href='/'>Home</a></li>";

}
@if (ViewBag.ChangePassMsg != null && ViewBag.ChangePassStatus != null)
{
    if (ViewBag.ChangePassStatus == 1)
    {
        <div class="alert alert-success alert-dismissible fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class="glyphicon glyphicon-remove text-danger"></span></a>
            <strong>Congratulation!</strong> @ViewBag.ChangePassMsg
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class=" glyphicon glyphicon-remove text-danger"></span></a>
            <strong>Sorry!</strong> @ViewBag.ChangePassMsg
        </div>
    }
}
else
{
    if (ViewBag.CheckOperationDate != null)
    {
        <div class="alert alert-danger alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class=" glyphicon glyphicon-remove text-danger"></span></a>
            <strong>Sorry!</strong> @ViewBag.CheckOperationDate
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h2 style="color:red;font-weight:bold">Operation Date : @ViewBag.OperationDate</h2>
            <h3 style="color:darkseagreen;font-weight:bold;">Next Operation Date : @ViewBag.NextOperationDate</h3>
            @*<button type="button" id="end" class="btn btn-primary" href="@Url.Action("DayEnd", "Home")">Day End</button>*@
            <a class="btn btn-primary" href="@Url.Action("DayEnd","Home")">Day End</a>
        </div>
        <div class=" col-12 text-center">
            @*   <img class="img-fluid" style="width: 20rem;" src="~/Content/img/undraw_Agreement_re_d4dv.svg" alt="...">*@
        </div>
    </div>
}


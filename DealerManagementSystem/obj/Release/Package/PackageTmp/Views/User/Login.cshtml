@model DealerManagementSystem.Models.DmsUser

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>DMS | User Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/Login/style.css" rel="stylesheet" media="all"/>
    <link rel="shortcut icon" href="../../Images/td_logo.png"/>

    <style>
        .text-danger {
            color: white;
            font-family: Oswald-Light;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
           

            <div class="signin">
                <div class="row">
                    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                        <img class="img-responsive" src="~/Images/Logo.jpg" style="margin-bottom: 30px;" />
                        <h1>DMS LOGIN</h1>
                    </a>
                    <div>
                        @Html.TextBoxFor(model => model.UserName, new {@class = "user", @placeholder = "User Name"})
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { id = "lblEmptyUserName", @class = "text-danger" })
                    </div>
                    <div>
                        @Html.PasswordFor(model => model.Password, new {@class = "pass", @placeholder = "Password"})
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { id = "lblEmptyPassword", @class = "text-danger" })

                    </div>
                    <div>
                        @Html.ValidationMessage("LoginFaild", new { id = "lblLoginfaildPassword", @class = "text-danger" })
                    </div>
                </div>

                <label id="lblRememberMe" class="field-validation-error">
                    <input type="checkbox" value="Remember-Me" /> Remember Me?
                </label>
                <input class="btn btn-success" type="submit" value="LOGIN" />
            </div>
        </div>
        <div class="footer">
            <p>Copyright &copy; @DateTime.Today.Year Transcom Electronics Limited</p>
        </div>
    }

    <script src="~/Scripts/a.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            var loginfaildUserName = $("#lblLoginfaildUserName").text();
            var loginfaildPassword = $("#lblLoginfaildPassword").text();
            if (loginfaildUserName !== "") {
                $("#UserName").focus(function () {
                    $("#lblLoginfaildUserName").fadeOut(1000);
                });
            }
            if (loginfaildPassword !== "") {
                $("#Password").focus(function () {
                    $("#lblLoginfaildPassword").fadeOut(1000);
                });
            }
        });
    </script>
</body>
</html>
